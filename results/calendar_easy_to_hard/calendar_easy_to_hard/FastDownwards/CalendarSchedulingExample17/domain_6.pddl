(define (domain meeting-scheduler)
  (:requirements :strips :typing :negative-preconditions)
  (:types participant timeslot)
  (:predicates
    (busy ?p - participant ?t - timeslot)
    (allow ?t - timeslot)
    (requested ?t - timeslot)
    (confirmed ?p - participant ?t - timeslot)
    (scheduled ?t - timeslot)
    (meeting-scheduled)
  )
  (:action propose
    :parameters (?t - timeslot)
    :precondition (and
      (allow ?t)
      (not (meeting-scheduled))
      (not (requested ?t))
    )
    :effect (requested ?t)
  )
  (:action confirm
    :parameters (?p - participant ?t - timeslot)
    :precondition (and
      (requested ?t)
      (not (busy ?p ?t))
      (not (confirmed ?p ?t))
      (not (meeting-scheduled))
    )
    :effect (confirmed ?p ?t)
  )
  (:action finalize
    :parameters (?t - timeslot ?p1 - participant ?p2 - participant ?p3 - participant ?p4 - participant)
    :precondition (and
      (requested ?t)
      (confirmed ?p1 ?t)
      (confirmed ?p2 ?t)
      (confirmed ?p3 ?t)
      (confirmed ?p4 ?t)
      (not (meeting-scheduled))
    )
    :effect (and
      (scheduled ?t)
      (meeting-scheduled)
      (not (requested ?t))
    )
  )
)