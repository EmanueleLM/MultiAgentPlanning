(define (domain meeting-scheduling)
  (:requirements :typing :adl :negative-preconditions :equality :action-costs :quantified-preconditions)
  (:types person slot)
  (:predicates
    (slot ?s - slot)
    (person ?p - person)
    (before ?s1 - slot ?s2 - slot)
    (free ?p - person ?s - slot)
    (chosen ?s - slot)
  )
  (:functions (total-cost))
  (:action select
    :parameters (?s - slot)
    :precondition (and
      (slot ?s)
      (forall (?p - person) (free ?p ?s))
      (not (exists (?t - slot) (and (before ?t ?s) (forall (?p - person) (free ?p ?t)))))
    )
    :effect (and
      (chosen ?s)
      (when (= ?s slot-09-00) (increase (total-cost) 0))
      (when (= ?s slot-09-30) (increase (total-cost) 1))
      (when (= ?s slot-10-00) (increase (total-cost) 2))
      (when (= ?s slot-10-30) (increase (total-cost) 3))
      (when (= ?s slot-11-00) (increase (total-cost) 4))
      (when (= ?s slot-11-30) (increase (total-cost) 5))
      (when (= ?s slot-12-00) (increase (total-cost) 6))
      (when (= ?s slot-12-30) (increase (total-cost) 7))
      (when (= ?s slot-13-00) (increase (total-cost) 8))
      (when (= ?s slot-13-30) (increase (total-cost) 9))
      (when (= ?s slot-14-00) (increase (total-cost) 10))
      (when (= ?s slot-14-30) (increase (total-cost) 11))
      (when (= ?s slot-15-00) (increase (total-cost) 12))
      (when (= ?s slot-15-30) (increase (total-cost) 13))
      (when (= ?s slot-16-00) (increase (total-cost) 14))
      (when (= ?s slot-16-30) (increase (total-cost) 15))
    )
  )
)