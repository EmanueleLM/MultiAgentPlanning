(define (domain meeting-scheduling)
  (:requirements :typing :negative-preconditions)
  (:types participant slot)
  (:predicates
    (available ?p - participant ?s - slot)
    (meeting-scheduled)
    (scheduled-at ?s - slot)
    (attends ?p - participant)
    (room-available ?s - slot)
  )
  (:action schedule-meeting
    :parameters (?s - slot ?c - participant ?m - participant ?a - participant)
    :precondition (and
      (not (meeting-scheduled))
      (room-available ?s)
      (available ?c ?s)
      (available ?m ?s)
      (available ?a ?s)
    )
    :effect (and
      (meeting-scheduled)
      (scheduled-at ?s)
      (attends ?c)
      (attends ?m)
      (attends ?a)
      (not (room-available ?s))
      (not (available ?c ?s))
      (not (available ?m ?s))
      (not (available ?a ?s))
    )
  )
)