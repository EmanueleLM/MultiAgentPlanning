(define (domain integrated-meeting-domain)
  (:requirements :strips :typing)
  (:types slot)
  (:predicates
    (slot ?s - slot)
    (free-donna ?s - slot)
    (free-john ?s - slot)
    (free-billy ?s - slot)
    (proposed-donna ?s - slot)
    (proposed-john ?s - slot)
    (proposed-billy ?s - slot)
    (scheduled ?s - slot)
    (meeting-scheduled)
  )
  (:action propose-donna
    :parameters (?s - slot)
    :precondition (and (slot ?s) (free-donna ?s))
    :effect (and (proposed-donna ?s))
  )
  (:action propose-john
    :parameters (?s - slot)
    :precondition (and (slot ?s) (free-john ?s))
    :effect (and (proposed-john ?s))
  )
  (:action propose-billy
    :parameters (?s - slot)
    :precondition (and (slot ?s) (free-billy ?s))
    :effect (and (proposed-billy ?s))
  )
  (:action finalize-meeting
    :parameters (?s - slot)
    :precondition (and (slot ?s)
                       (proposed-donna ?s)
                       (proposed-john ?s)
                       (proposed-billy ?s))
    :effect (and
             (scheduled ?s)
             (meeting-scheduled)
             (not (free-donna ?s))
             (not (free-john ?s))
             (not (free-billy ?s))
    )
  )
)