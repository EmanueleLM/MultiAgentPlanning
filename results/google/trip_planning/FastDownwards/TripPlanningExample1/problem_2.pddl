(define (problem itinerary-15days)
  (:domain itinerary)
  (:objects
    split manchester riga - city
  )
  (:init
    (at manchester)
    (= (total-days) 0)
    (= (spent split) 0)
    (= (spent manchester) 0)
    (= (spent riga) 0)
    (direct riga manchester)
    (direct manchester riga)
    (direct manchester split)
  )
  (:goal (and
    (visited split)
    (visited manchester)
    (visited riga)
    (= (spent split) 6)
    (= (spent manchester) 4)
    (= (spent riga) 7)
    (= (total-days) 15)
  ))
)