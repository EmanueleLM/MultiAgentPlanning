(define (domain trip-planning)
  (:requirements :typing :adl :negative-preconditions :action-costs)
  (:types city day)
  (:predicates
    (at ?c - city ?d - day)
    (next ?d1 - day ?d2 - day)
    (direct ?c1 - city ?c2 - city)
    (total-days-14)
    (req-istanbul-5)
    (req-tallinn-4)
    (req-zurich-7)
    (start-day-1)
  )
  (:functions (total-cost))
  (:action fly
    :parameters (?from - city ?to - city ?d1 - day ?d2 - day)
    :precondition (and (at ?from ?d1) (next ?d1 ?d2) (direct ?from ?to))
    :effect (and (not (at ?from ?d1)) (at ?to ?d2) (increase (total-cost) 1))
  )
  (:action stay
    :parameters (?c - city ?d1 - day ?d2 - day)
    :precondition (and (at ?c ?d1) (next ?d1 ?d2))
    :effect (and (not (at ?c ?d1)) (at ?c ?d2))
  )
)