(define (domain trip-planning)
  (:requirements :strips :typing :equality)
  (:types city day preference)
  (:predicates
    (at ?c - city ?d - day)
    (direct ?c1 - city ?c2 - city)
    (next ?d1 - day ?d2 - day)
    (pref-sat ?p - preference)
    (first-day ?d - day)
    (pref-target ?p - preference ?c - city ?d1 - day ?d2 - day)
  )
  (:action assign-first-day
    :parameters (?c - city ?d - day)
    :precondition (first-day ?d)
    :effect (and (at ?c ?d))
  )
  (:action assign-next-stay
    :parameters (?c - city ?pd - day ?d - day)
    :precondition (and (next ?pd ?d) (at ?c ?pd))
    :effect (and (at ?c ?d))
  )
  (:action assign-next-fly
    :parameters (?from - city ?to - city ?pd - day ?d - day)
    :precondition (and (next ?pd ?d) (at ?from ?pd) (direct ?from ?to))
    :effect (and (at ?to ?d))
  )
  (:action pay-pref
    :parameters (?p - preference)
    :effect (and (pref-sat ?p))
  )
  (:action satisfy-pref
    :parameters (?p - preference ?c - city ?d1 - day ?d2 - day)
    :precondition (and (pref-target ?p ?c ?d1 ?d2) (at ?c ?d1) (at ?c ?d2))
    :effect (and (pref-sat ?p))
  )
)