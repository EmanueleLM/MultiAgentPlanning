(define (domain hanoi)
  (:requirements :strips :typing :negative-preconditions)
  (:types disk peg stage - object)

  (:predicates
    (smaller ?d1 - disk ?d2 - disk)
    (on ?d - disk ?s - object)
    (top ?d - disk ?p - peg)
    (empty ?p - peg)
    (succ ?s - stage ?s2 - stage)
    (active ?s - stage)
  )

  (:action move-top-from-peg-to-empty-peg
    :parameters (?d - disk ?from - peg ?to - peg ?s - stage ?s2 - stage)
    :precondition (and
      (active ?s)
      (succ ?s ?s2)
      (top ?d ?from)
      (on ?d ?from)
      (empty ?to)
    )
    :effect (and
      (not (on ?d ?from))
      (on ?d ?to)
      (not (top ?d ?from))
      (top ?d ?to)
      (not (empty ?to))
      (empty ?from)
      (not (active ?s))
      (active ?s2)
    )
  )

  (:action move-top-from-peg-onto-disk
    :parameters (?d - disk ?from - peg ?to - peg ?t - disk ?s - stage ?s2 - stage)
    :precondition (and
      (active ?s)
      (succ ?s ?s2)
      (top ?d ?from)
      (on ?d ?from)
      (top ?t ?to)
      (smaller ?d ?t)
    )
    :effect (and
      (not (on ?d ?from))
      (on ?d ?t)
      (not (top ?t ?to))
      (top ?d ?to)
      (not (top ?d ?from))
      (empty ?from)
      (not (active ?s))
      (active ?s2)
    )
  )

  (:action move-top-from-disk-to-empty-peg
    :parameters (?d - disk ?b - disk ?from - peg ?to - peg ?s - stage ?s2 - stage)
    :precondition (and
      (active ?s)
      (succ ?s ?s2)
      (top ?d ?from)
      (on ?d ?b)
      (empty ?to)
    )
    :effect (and
      (not (on ?d ?b))
      (on ?d ?to)
      (not (top ?d ?from))
      (top ?d ?to)
      (top ?b ?from)
      (not (empty ?to))
      (not (active ?s))
      (active ?s2)
    )
  )

  (:action move-top-from-disk-onto-disk
    :parameters (?d - disk ?b - disk ?from - peg ?to - peg ?t - disk ?s - stage ?s2 - stage)
    :precondition (and
      (active ?s)
      (succ ?s ?s2)
      (top ?d ?from)
      (on ?d ?b)
      (top ?t ?to)
      (smaller ?d ?t)
    )
    :effect (and
      (not (on ?d ?b))
      (on ?d ?t)
      (not (top ?t ?to))
      (top ?d ?to)
      (not (top ?d ?from))
      (top ?b ?from)
      (not (active ?s))
      (active ?s2)
    )
  )
)