(define (domain hanoi_staged)
  (:requirements :strips :typing :negative-preconditions)
  (:types disk peg stage)

  (:predicates
    (on-peg ?d - disk ?p - peg)
    (on-disk ?d - disk ?under - disk)
    (top ?d - disk ?p - peg)
    (empty ?p - peg)
    (smaller ?small - disk ?big - disk)
    (current-stage ?s - stage)
    (next ?s1 - stage ?s2 - stage)
  )

  (:action move_from_peg_to_empty
    :parameters (?d - disk ?pfrom - peg ?pto - peg ?s - stage ?s2 - stage)
    :precondition (and
      (on-peg ?d ?pfrom)
      (top ?d ?pfrom)
      (empty ?pto)
      (current-stage ?s)
      (next ?s ?s2)
    )
    :effect (and
      (not (current-stage ?s))
      (current-stage ?s2)
      (not (on-peg ?d ?pfrom))
      (not (top ?d ?pfrom))
      (on-peg ?d ?pto)
      (top ?d ?pto)
      (empty ?pfrom)
      (not (empty ?pto))
    )
  )

  (:action move_from_peg_to_nonempty
    :parameters (?d - disk ?pfrom - peg ?pto - peg ?t - disk ?s - stage ?s2 - stage)
    :precondition (and
      (on-peg ?d ?pfrom)
      (top ?d ?pfrom)
      (top ?t ?pto)
      (smaller ?d ?t)
      (current-stage ?s)
      (next ?s ?s2)
    )
    :effect (and
      (not (current-stage ?s))
      (current-stage ?s2)
      (not (on-peg ?d ?pfrom))
      (not (top ?d ?pfrom))
      (on-disk ?d ?t)
      (top ?d ?pto)
      (not (top ?t ?pto))
      (empty ?pfrom)
    )
  )

  (:action move_from_disk_to_empty
    :parameters (?d - disk ?under - disk ?pfrom - peg ?pto - peg ?s - stage ?s2 - stage)
    :precondition (and
      (on-disk ?d ?under)
      (top ?d ?pfrom)
      (empty ?pto)
      (current-stage ?s)
      (next ?s ?s2)
    )
    :effect (and
      (not (current-stage ?s))
      (current-stage ?s2)
      (not (on-disk ?d ?under))
      (not (top ?d ?pfrom))
      (on-peg ?d ?pto)
      (top ?d ?pto)
      (not (empty ?pto))
      (top ?under ?pfrom)
    )
  )

  (:action move_from_disk_to_nonempty
    :parameters (?d - disk ?under - disk ?pfrom - peg ?pto - peg ?t - disk ?s - stage ?s2 - stage)
    :precondition (and
      (on-disk ?d ?under)
      (top ?d ?pfrom)
      (top ?t ?pto)
      (smaller ?d ?t)
      (current-stage ?s)
      (next ?s ?s2)
    )
    :effect (and
      (not (current-stage ?s))
      (current-stage ?s2)
      (not (on-disk ?d ?under))
      (not (top ?d ?pfrom))
      (on-disk ?d ?t)
      (top ?d ?pto)
      (not (top ?t ?pto))
      (top ?under ?pfrom)
    )
  )
)