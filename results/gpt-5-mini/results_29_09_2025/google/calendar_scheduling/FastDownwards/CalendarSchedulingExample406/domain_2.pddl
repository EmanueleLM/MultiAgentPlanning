(define (domain meeting-scheduling)
  (:requirements :typing :adl :negative-preconditions :existential-preconditions :universal-preconditions :conditional-effects :fluents :action-costs)
  (:types person slot)
  (:predicates
    (free ?p - person ?s - slot)
    (required ?p - person)
    (chosen ?s - slot)
    (attend ?p - person ?s - slot)
    (scheduled ?s - slot)
    (index0 ?s - slot) (index1 ?s - slot) (index2 ?s - slot) (index3 ?s - slot)
    (index4 ?s - slot) (index5 ?s - slot) (index6 ?s - slot) (index7 ?s - slot)
    (index8 ?s - slot) (index9 ?s - slot) (index10 ?s - slot) (index11 ?s - slot)
    (index12 ?s - slot) (index13 ?s - slot) (index14 ?s - slot) (index15 ?s - slot)
  )
  (:functions (total-cost))

  (:action choose-slot
    :parameters (?s - slot)
    :precondition (and (not (exists (?x - slot) (scheduled ?x))))
    :effect (and
             (chosen ?s)
             (when (index0 ?s)  (increase (total-cost) 0))
             (when (index1 ?s)  (increase (total-cost) 1))
             (when (index2 ?s)  (increase (total-cost) 2))
             (when (index3 ?s)  (increase (total-cost) 3))
             (when (index4 ?s)  (increase (total-cost) 4))
             (when (index5 ?s)  (increase (total-cost) 5))
             (when (index6 ?s)  (increase (total-cost) 6))
             (when (index7 ?s)  (increase (total-cost) 7))
             (when (index8 ?s)  (increase (total-cost) 8))
             (when (index9 ?s)  (increase (total-cost) 9))
             (when (index10 ?s) (increase (total-cost) 10))
             (when (index11 ?s) (increase (total-cost) 11))
             (when (index12 ?s) (increase (total-cost) 12))
             (when (index13 ?s) (increase (total-cost) 13))
             (when (index14 ?s) (increase (total-cost) 14))
             (when (index15 ?s) (increase (total-cost) 15))
    )
  )

  (:action join
    :parameters (?p - person ?s - slot)
    :precondition (and (chosen ?s) (free ?p ?s))
    :effect (attend ?p ?s)
  )

  (:action confirm
    :parameters (?s - slot)
    :precondition (and (chosen ?s)
                       (forall (?p - person)
                         (imply (required ?p) (attend ?p ?s))))
    :effect (and (scheduled ?s) (not (chosen ?s)))
  )
)