(define (domain trip-planning)
  (:requirements :strips :typing :negative-preconditions)
  (:types city day num)
  (:predicates
    (at ?c - city ?d - day)
    (next ?d1 - day ?d2 - day)
    (direct_flight ?from - city ?to - city)
    (visited ?c - city)
    (allowed_meet ?d - day)
    (met_friend)
    (is_nice ?c - city)
    (pref_stay ?c - city ?n - num)
    (total_days ?n - num)
  )
  (:action move
    :parameters (?from - city ?to - city ?d1 - day ?d2 - day)
    :precondition (and (at ?from ?d1) (next ?d1 ?d2) (direct_flight ?from ?to))
    :effect (and (not (at ?from ?d1)) (at ?to ?d2) (visited ?to))
  )
  (:action stay
    :parameters (?c - city ?d1 - day ?d2 - day)
    :precondition (and (at ?c ?d1) (next ?d1 ?d2))
    :effect (and (not (at ?c ?d1)) (at ?c ?d2) (visited ?c))
  )
  (:action meet_friend
    :parameters (?c - city ?d - day)
    :precondition (and (at ?c ?d) (is_nice ?c) (allowed_meet ?d) (not (met_friend)))
    :effect (met_friend)
  )
)