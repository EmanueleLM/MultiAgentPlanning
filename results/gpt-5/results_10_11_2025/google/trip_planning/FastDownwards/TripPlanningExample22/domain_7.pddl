(define (domain trip-planning)
  (:requirements :strips :typing :negative-preconditions :action-costs)
  (:types city day slot)
  (:predicates
    (current-day ?d - day)
    (next ?d1 - day ?d2 - day)
    (assigned ?d - day)
    (unassigned ?d - day)
    (at ?c - city ?d - day)
    (visited ?c - city)
    (flight ?from - city ?to - city)
    (last ?c - city)
    (start)
    (show-day ?d - day)
    (attended ?d - day)
    (show-satisfied ?d - day)
    (is-berlin ?c - city)
    (claim-open)
    (slot-for ?s - slot ?c - city)
    (claimed-slot ?s - slot)
    (waived-slot ?s - slot)
    (slot-satisfied ?s - slot)
  )
  (:functions (total-cost))
  (:action assign_first_day
    :parameters (?c - city ?d - day)
    :precondition (and
      (start)
      (current-day ?d)
      (unassigned ?d)
    )
    :effect (and
      (assigned ?d)
      (not (unassigned ?d))
      (at ?c ?d)
      (visited ?c)
      (last ?c)
      (not (start))
      (claim-open)
    )
  )
  (:action assign_stay
    :parameters (?c - city ?d - day)
    :precondition (and
      (not (start))
      (current-day ?d)
      (unassigned ?d)
      (last ?c)
    )
    :effect (and
      (assigned ?d)
      (not (unassigned ?d))
      (at ?c ?d)
      (visited ?c)
      (claim-open)
    )
  )
  (:action assign_move
    :parameters (?from - city ?to - city ?d - day)
    :precondition (and
      (not (start))
      (current-day ?d)
      (unassigned ?d)
      (last ?from)
      (flight ?from ?to)
    )
    :effect (and
      (assigned ?d)
      (not (unassigned ?d))
      (at ?to ?d)
      (visited ?to)
      (not (last ?from))
      (last ?to)
      (claim-open)
    )
  )
  (:action attend_show
    :parameters (?d - day ?c - city)
    :precondition (and
      (current-day ?d)
      (assigned ?d)
      (at ?c ?d)
      (is-berlin ?c)
      (show-day ?d)
      (not (show-satisfied ?d))
    )
    :effect (and
      (attended ?d)
      (show-satisfied ?d)
    )
  )
  (:action waive_show_day
    :parameters (?d - day)
    :precondition (and
      (show-day ?d)
      (not (show-satisfied ?d))
    )
    :effect (and
      (show-satisfied ?d)
      (increase (total-cost) 100)
    )
  )
  (:action claim_city_slot
    :parameters (?c - city ?s - slot ?d - day)
    :precondition (and
      (current-day ?d)
      (assigned ?d)
      (at ?c ?d)
      (claim-open)
      (slot-for ?s ?c)
      (not (claimed-slot ?s))
      (not (waived-slot ?s))
    )
    :effect (and
      (claimed-slot ?s)
      (slot-satisfied ?s)
      (not (claim-open))
    )
  )
  (:action waive_city_slot
    :parameters (?c - city ?s - slot)
    :precondition (and
      (slot-for ?s ?c)
      (not (claimed-slot ?s))
      (not (waived-slot ?s))
    )
    :effect (and
      (waived-slot ?s)
      (slot-satisfied ?s)
      (increase (total-cost) 10)
    )
  )
  (:action advance_day
    :parameters (?d - day ?d2 - day)
    :precondition (and
      (current-day ?d)
      (assigned ?d)
      (next ?d ?d2)
    )
    :effect (and
      (not (current-day ?d))
      (current-day ?d2)
    )
  )
)