(define (domain trip-6day-direct-flights)
  (:requirements :strips :typing :negative-preconditions :action-costs)
  (:types city day)
  (:predicates
    (cur ?d - day)
    (next ?d1 - day ?d2 - day)
    (at ?c - city)
    (booked ?d - day ?c - city)
    (direct ?c1 - city ?c2 - city)
  )
  (:functions (total-cost))
  (:action stay
    :parameters (?d - day ?d2 - day ?c - city)
    :precondition (and
      (cur ?d)
      (at ?c)
      (next ?d ?d2)
      (not (booked ?d ?c))
    )
    :effect (and
      (booked ?d ?c)
      (not (cur ?d))
      (cur ?d2)
      (increase (total-cost) 1)
    )
  )
  (:action fly
    :parameters (?d - day ?d2 - day ?from - city ?to - city)
    :precondition (and
      (cur ?d)
      (at ?from)
      (next ?d ?d2)
      (direct ?from ?to)
      (not (booked ?d ?from))
    )
    :effect (and
      (booked ?d ?from)
      (not (at ?from))
      (at ?to)
      (not (cur ?d))
      (cur ?d2)
      (increase (total-cost) 1)
    )
  )
  (:action finalize-last-day
    :parameters (?d - day ?c - city)
    :precondition (and
      (cur ?d)
      (at ?c)
      (not (booked ?d ?c))
    )
    :effect (and
      (booked ?d ?c)
      (increase (total-cost) 1)
    )
  )
)