(define (domain tripplanning)
  (:requirements :typing :negative-preconditions :action-costs)
  (:types city day num)
  (:predicates
    (at ?c - city ?d - day)
    (direct ?from - city ?to - city)
    (next ?d1 - day ?d2 - day)
    (start-day ?d - day)
    (assigned ?d - day)
    (show-window ?c - city ?dstart - day ?dend - day)
    (stay-required ?c - city ?n - num)
    (total-days ?n - num)
  )
  (:action start-at
    :parameters (?c - city ?d - day)
    :precondition (and (start-day ?d) (not (assigned ?d)))
    :effect (and (at ?c ?d) (assigned ?d))
  )
  (:action stay
    :parameters (?c - city ?d1 - day ?d2 - day)
    :precondition (and (at ?c ?d1) (next ?d1 ?d2) (not (assigned ?d2)))
    :effect (and (at ?c ?d2) (assigned ?d2))
  )
  (:action move
    :parameters (?from - city ?to - city ?d1 - day ?d2 - day)
    :precondition (and (at ?from ?d1) (next ?d1 ?d2) (direct ?from ?to) (not (assigned ?d2)))
    :effect (and (at ?to ?d2) (assigned ?d2))
  )
)