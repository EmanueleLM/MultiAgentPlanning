(define (domain meeting-scheduling)
  (:requirements :strips :typing)
  (:types person slot)
  (:predicates
    (free ?p - person ?s - slot)
    (next ?s1 - slot ?s2 - slot)
    (reserved ?p - person ?s1 - slot ?s2 - slot)
    (meeting-scheduled ?s1 - slot ?s2 - slot)
  )
  (:action reserve-arthur
    :parameters (?s1 - slot ?s2 - slot)
    :precondition (and (next ?s1 ?s2) (free arthur ?s1) (free arthur ?s2))
    :effect (and (reserved arthur ?s1 ?s2) (not (free arthur ?s1)) (not (free arthur ?s2)))
  )
  (:action reserve-michael
    :parameters (?s1 - slot ?s2 - slot)
    :precondition (and (next ?s1 ?s2) (free michael ?s1) (free michael ?s2))
    :effect (and (reserved michael ?s1 ?s2) (not (free michael ?s1)) (not (free michael ?s2)))
  )
  (:action reserve-samantha
    :parameters (?s1 - slot ?s2 - slot)
    :precondition (and (next ?s1 ?s2) (free samantha ?s1) (free samantha ?s2))
    :effect (and (reserved samantha ?s1 ?s2) (not (free samantha ?s1)) (not (free samantha ?s2)))
  )
  (:action finalize-meeting
    :parameters (?s1 - slot ?s2 - slot)
    :precondition (and (next ?s1 ?s2) (reserved arthur ?s1 ?s2) (reserved michael ?s1 ?s2) (reserved samantha ?s1 ?s2))
    :effect (meeting-scheduled ?s1 ?s2)
  )
)