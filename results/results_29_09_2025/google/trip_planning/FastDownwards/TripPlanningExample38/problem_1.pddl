(define (problem trip-problem)
  (:domain trip-planning)
  (:objects geneva madrid venice - city d1 d2 d3 d4 d5 - day)
  (:init
    (flight geneva madrid)
    (flight madrid geneva)
    (flight madrid venice)
    (flight venice madrid)
    (day-next d1 d2)
    (day-next d2 d3)
    (day-next d3 d4)
    (day-next d4 d5)
    (at madrid d1)
    (= (desired geneva) 2)
    (= (desired madrid) 3)
    (= (desired venice) 2)
    (= (satisfied geneva) 0)
    (= (satisfied madrid) 0)
    (= (satisfied venice) 0)
    (= (cost) 0)
  )
  (:goal (and (at venice d4) (at venice d5)))
  (:metric minimize (cost))
)