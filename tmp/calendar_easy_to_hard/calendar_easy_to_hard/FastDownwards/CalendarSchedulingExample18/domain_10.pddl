(define (domain combined-schedule)
  (:requirements :typing :negative-preconditions)
  (:types slot person)
  (:predicates
    (within-work-hours ?s - slot)
    (busy ?p - person ?s - slot)
    (meeting-booked)
    (meeting-at ?s - slot)
    (attends ?p - person ?s - slot)
  )
  (:action finalize-meeting
    :parameters (?s - slot ?p1 - person ?p2 - person ?p3 - person ?p4 - person)
    :precondition (and
      (within-work-hours ?s)
      (not (meeting-booked))
      (not (busy ?p1 ?s))
      (not (busy ?p2 ?s))
      (not (busy ?p3 ?s))
      (not (busy ?p4 ?s))
    )
    :effect (and
      (meeting-booked)
      (meeting-at ?s)
      (attends ?p1 ?s)
      (attends ?p2 ?s)
      (attends ?p3 ?s)
      (attends ?p4 ?s)
    )
  )
)