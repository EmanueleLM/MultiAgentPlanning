(define (domain combined-schedule)
  (:requirements :typing :negative-preconditions)
  (:types slot person)

  (:predicates
    (slot ?s - slot)
    (within-work-hours ?s - slot)
    (slot-free ?s - slot)
    (busy ?p - person ?s - slot)
    (meeting-booked)
    (meeting-at ?s - slot)
    (attends ?p - person ?s - slot)
  )

  (:action schedule-meeting
    :parameters (?p1 ?p2 ?p3 ?p4 - person ?s - slot)
    :precondition (and
      (slot ?s)
      (within-work-hours ?s)
      (slot-free ?s)
      (not (busy ?p1 ?s))
      (not (busy ?p2 ?s))
      (not (busy ?p3 ?s))
      (not (busy ?p4 ?s))
      (not (meeting-booked))
    )
    :effect (and
      (meeting-booked)
      (meeting-at ?s)
      (attends ?p1 ?s)
      (attends ?p2 ?s)
      (attends ?p3 ?s)
      (attends ?p4 ?s)
      (not (slot-free ?s))
    )
  )
)