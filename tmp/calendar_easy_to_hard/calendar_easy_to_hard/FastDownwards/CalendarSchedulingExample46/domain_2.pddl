(define (domain integrated-meeting-scheduling)
  (:requirements :strips :typing :negative-preconditions)
  (:types person slot)
  (:constants alan michael michelle roy judy natalie brian - person)
  (:predicates
    (work-slot ?s - slot)
    (available ?p - person ?s - slot)
    (meeting-scheduled)
    (scheduled-at ?s - slot)
  )
  (:action schedule-meeting
    :parameters (?s - slot)
    :precondition (and
      (work-slot ?s)
      (not (meeting-scheduled))
      (available alan ?s)
      (available michael ?s)
      (available michelle ?s)
      (available roy ?s)
      (available judy ?s)
      (available natalie ?s)
      (available brian ?s)
    )
    :effect (and
      (meeting-scheduled)
      (scheduled-at ?s)
    )
  )
)