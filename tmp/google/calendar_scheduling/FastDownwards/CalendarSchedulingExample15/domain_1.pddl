(define (domain meeting-scheduling-combined)
  (:requirements :strips :negative-preconditions)
  (:predicates
    (slot ?s)
    (within-hours ?s)
    (a1_busy ?p ?s)
    (a1_scheduled ?s)
    (a1_has_attendee ?s ?p)
    (participant ?p)
    (a1_meeting_scheduled)
    (a1_meeting_with ?p1 ?p2)
    (a2_free ?p ?s)
    (a2_busy ?p ?s)
    (a2_meeting_scheduled ?s)
    (a2_attends ?p ?s)
    (meeting-duration-30)
    (a3_busy ?p ?s)
    (meeting ?m)
    (a3_scheduled ?m ?s)
    (a3_meeting-with ?m ?p)
    (used ?s)
  )

  (:action a1_schedule-with
    :parameters (?s ?owner ?p1 ?p2)
    :precondition (and
      (slot ?s)
      (within-hours ?s)
      (participant ?owner)
      (participant ?p1)
      (participant ?p2)
      (not (a1_busy ?owner ?s))
      (not (a1_scheduled ?s))
    )
    :effect (and
      (a1_scheduled ?s)
      (a1_has_attendee ?s ?p1)
      (a1_has_attendee ?s ?p2)
      (a1_has_attendee ?s ?owner)
      (a1_meeting_scheduled)
      (a1_meeting_with ?p1 ?p2)
    )
  )

  (:action a2_schedule-meeting
    :parameters (?s ?p1 ?p2 ?p3)
    :precondition (and
      (slot ?s)
      (a2_free ?p1 ?s)
      (a2_free ?p2 ?s)
      (a2_free ?p3 ?s)
      (meeting-duration-30)
    )
    :effect (and
      (a2_meeting_scheduled ?s)
      (a2_attends ?p1 ?s)
      (a2_attends ?p2 ?s)
      (a2_attends ?p3 ?s)
    )
  )

  (:action a3_schedule
    :parameters (?m ?s ?owner ?p1 ?p2)
    :precondition (and
      (meeting ?m)
      (slot ?s)
      (within-hours ?s)
      (participant ?owner)
      (participant ?p1)
      (participant ?p2)
      (not (a3_busy ?owner ?s))
      (not (used ?s))
    )
    :effect (and
      (a3_scheduled ?m ?s)
      (a3_meeting-with ?m ?owner)
      (a3_meeting-with ?m ?p1)
      (a3_meeting-with ?m ?p2)
      (used ?s)
    )
  )
)