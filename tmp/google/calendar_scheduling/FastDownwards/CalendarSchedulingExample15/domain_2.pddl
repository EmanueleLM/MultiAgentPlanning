(define (domain meeting-scheduling)
  (:requirements :strips :negative-preconditions)
  (:predicates
    (slot ?s)
    (within-hours ?s)
    (participant ?p)
    (busy ?p ?s)
    (scheduled_slot ?s)
    (meeting ?m)
    (scheduled_at ?m ?s)
    (attends ?p ?m)
    (meeting-duration-30)
  )

  (:action schedule-meeting
    :parameters (?m ?s ?p1 ?p2 ?p3)
    :precondition (and
      (meeting ?m)
      (slot ?s)
      (within-hours ?s)
      (participant ?p1) (participant ?p2) (participant ?p3)
      (not (busy ?p1 ?s))
      (not (busy ?p2 ?s))
      (not (busy ?p3 ?s))
      (not (scheduled_slot ?s))
      (meeting-duration-30)
    )
    :effect (and
      (scheduled_at ?m ?s)
      (scheduled_slot ?s)
      (attends ?p1 ?m)
      (attends ?p2 ?m)
      (attends ?p3 ?m)
    )
  )
)