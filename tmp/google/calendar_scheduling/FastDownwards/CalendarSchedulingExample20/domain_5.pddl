(define (domain meeting-integrated)
  (:requirements :typing)
  (:types person time meeting)
  (:predicates
     (free ?p - person ?t - time)
     (meeting_scheduled ?t - time)
     (attends ?m - meeting ?p - person)
  )
  (:action schedule_all_A
     :parameters (?t - time)
     :precondition (and (free Peter ?t)
                        (free Daniel ?t)
                        (free Ralph ?t)
                        (not (meeting_scheduled ?t))
                        (attends M Peter)
                        (attends M Daniel)
                        (attends M Ralph))
     :effect (and (meeting_scheduled ?t)
                  (not (free Peter ?t))
                  (not (free Daniel ?t))
                  (not (free Ralph ?t)))
  )

  (:action schedule_all_B
     :parameters (?t - time)
     :precondition (and (free Peter ?t)
                        (free Daniel ?t)
                        (free Ralph ?t)
                        (not (meeting_scheduled ?t))
                        (attends M Peter)
                        (attends M Daniel)
                        (attends M Ralph))
     :effect (and (meeting_scheduled ?t)
                  (not (free Peter ?t))
                  (not (free Daniel ?t))
                  (not (free Ralph ?t)))
  )
)