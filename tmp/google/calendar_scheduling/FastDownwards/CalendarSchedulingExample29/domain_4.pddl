(define (domain combined-meeting-scheduling)
  (:requirements :typing :strips)
  (:types person timeslot)

  (:predicates
    (next ?t1 - timeslot ?t2 - timeslot)
    (available ?p - person ?t - timeslot)
    (free ?p - person ?t - timeslot)
    (meeting-scheduled)
    (meeting-start ?t - timeslot)
    (attends ?p - person)
  )

  (:action schedule-by-madison
    :parameters (?s - timeslot ?n - timeslot ?ma - person ?di - person ?sh - person)
    :precondition (and
      (next ?s ?n)
      (free ?ma ?s) (free ?ma ?n)
      (free ?di ?s) (free ?di ?n)
      (free ?sh ?s) (free ?sh ?n)
    )
    :effect (and
      (meeting-scheduled)
      (meeting-start ?s)
      (attends ?ma) (attends ?di) (attends ?sh)
      (not (free ?ma ?s)) (not (free ?ma ?n))
      (not (free ?di ?s)) (not (free ?di ?n))
      (not (free ?sh ?s)) (not (free ?sh ?n))
      (not (available ?ma ?s)) (not (available ?ma ?n))
      (not (available ?di ?s)) (not (available ?di ?n))
      (not (available ?sh ?s)) (not (available ?sh ?n))
    )
  )

  (:action schedule-by-diana
    :parameters (?s - timeslot ?n - timeslot ?ma - person ?di - person ?sh - person)
    :precondition (and
      (next ?s ?n)
      (free ?ma ?s) (free ?ma ?n)
      (free ?di ?s) (free ?di ?n)
      (free ?sh ?s) (free ?sh ?n)
    )
    :effect (and
      (meeting-scheduled)
      (meeting-start ?s)
      (attends ?ma) (attends ?di) (attends ?sh)
      (not (free ?ma ?s)) (not (free ?ma ?n))
      (not (free ?di ?s)) (not (free ?di ?n))
      (not (free ?sh ?s)) (not (free ?sh ?n))
      (not (available ?ma ?s)) (not (available ?ma ?n))
      (not (available ?di ?s)) (not (available ?di ?n))
      (not (available ?sh ?s)) (not (available ?sh ?n))
    )
  )

  (:action schedule-by-shirley
    :parameters (?s - timeslot ?n - timeslot ?ma - person ?di - person ?sh - person)
    :precondition (and
      (next ?s ?n)
      (free ?ma ?s) (free ?ma ?n)
      (free ?di ?s) (free ?di ?n)
      (free ?sh ?s) (free ?sh ?n)
    )
    :effect (and
      (meeting-scheduled)
      (meeting-start ?s)
      (attends ?ma) (attends ?di) (attends ?sh)
      (not (free ?ma ?s)) (not (free ?ma ?n))
      (not (free ?di ?s)) (not (free ?di ?n))
      (not (free ?sh ?s)) (not (free ?sh ?n))
      (not (available ?ma ?s)) (not (available ?ma ?n))
      (not (available ?di ?s)) (not (available ?di ?n))
      (not (available ?sh ?s)) (not (available ?sh ?n))
    )
  )
)