(define (domain calendar-meeting)
  (:requirements :typing)
  (:types person slot)
  (:predicates
     (busy ?p - person ?t - slot)
     (scheduled ?t - slot)
  )
  (:action schedule-meeting
     :parameters (?p1 - person ?p2 - person ?p3 - person ?t - slot)
     :precondition (and (not (busy ?p1 ?t))
                        (not (busy ?p2 ?t))
                        (not (busy ?p3 ?t))
                        (not (scheduled ?t)))
     :effect (and (busy ?p1 ?t)
                  (busy ?p2 ?t)
                  (busy ?p3 ?t)
                  (scheduled ?t))
  )
)